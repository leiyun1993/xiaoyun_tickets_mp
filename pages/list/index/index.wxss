/* pages/list/index/index.wxss */

.item {
    margin: 30rpx 30rpx 0;
    background-color: #fff;
    border-radius: 12rpx;
}

.tag-box {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F6F6F6;
}

.tag {
    border-top-right-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
    background-color: var(--active-color);
    color: #fff;
    padding: 8rpx 12rpx;
    font-size: 24rpx;
    line-height: 1;
}
.tag.stop{
    background-color: #C2C2C2;
}
.item .content{
    padding: 20rpx 30rpx;
}
.item .name {
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    background-color: var(--main-color);
    color: #fff;
    font-size: 34rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    text-align: center;
    border-radius: 12rpx;
}
.item .name.stop{
    background-color: #C2C2C2;
}
.van-progress__pivot{
    white-space: nowrap;
}

.item .btn-box{
    border-top: 1rpx dashed #F6F6F6;
    padding: 20rpx 30rpx 30rpx;
}