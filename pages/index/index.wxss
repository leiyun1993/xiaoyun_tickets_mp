/* pages/index/index.wxss */

.swipe-box {
  padding: 30rpx;
  overflow: hidden;
  border-radius: 12rpx;
}

.banner-item,
.banner-item image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}


.config-item {
  background-color: red;
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.config-item .bg-icon {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  opacity: 0.08;
  width: 150rpx;
  height: 150rpx;
}

.config-item .icon-s {
  width: 80rpx;
  height: 80rpx;
}

.config-item-box {
  padding: 0;
  box-sizing: border-box;
  position: relative;
  width: 100%;
}

.config-box {
  padding: 30rpx;
}

.item {
  border-radius: 12rpx;
  background-color: #fff;
}
.p30{
  padding: 30rpx;
}